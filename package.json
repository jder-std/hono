{
    "private": true,
    "scripts": {
        "fmt": "biome check --write .",
        "tsc": "npm-run-all --parallel tsc:hono tsc:zv",
        "tsc:hono": "cd packages/hono && tsc --noEmit",
        "tsc:zv": "cd packages/hono-zod-validator && tsc --noEmit",
        "build": "npm-run-all --sequential build:hono build:zv",
        "build:hono": "cd packages/hono && tsup",
        "build:zv": "cd packages/hono-zod-validator && tsup",
        "test": "npm-run-all --sequential test:hono test:zv",
        "test:hono": "cd tests/hono && vitest run",
        "test:zv": "cd tests/hono-zod-validator && vitest run",
        "api": "npm-run-all --parallel api:hono api:zv",
        "api:hono": "cd packages/hono && typedoc",
        "api:zv": "cd packages/hono-zod-validator && typedoc",
        "": ""
    },
    "devDependencies": {
        "@apst/biome": "~0.1.0",
        "@apst/tsconfig": "~0.1.0",
        "@biomejs/biome": "^1.9.4",
        "npm-run-all2": "^8.0.4",
        "tsup": "^8.5.0",
        "typedoc": "~0.28.5",
        "typedoc-plugin-markdown": "^4.6.3",
        "typescript": "^5.8.3",
        "vite": "^6.3.5",
        "vitest": "^3.1.4"
    }
}
